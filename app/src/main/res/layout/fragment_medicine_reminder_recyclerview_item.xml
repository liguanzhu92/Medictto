<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal200"
    android:alpha="0.9"
    android:id="@+id/reminder_container"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal300"
        android:id="@+id/reminder_create_time"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Reminder Creation"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medicine_name"
        android:text="Medicine Name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_view_padding"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/medicine_time"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="timeFormedicine"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reminder"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Alarm ON/OFF"
            android:textAlignment="center" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repeat_text"
        android:textSize="20sp"
        android:padding="@dimen/text_view_padding"
        android:text="Repeats"/>
